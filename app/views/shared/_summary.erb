<table class="post-summary">
	<tr>
		<td class="post-score">
			<%= link_to "^", voteup_post_path(post.id),
														remote: true %>
			<p id="post-score"><%= post.votescore %></p>
			<%= link_to "v", votedown_post_path(post.id),
														remote: true %>
		</td>
		<td>
			<table class="post">
				<tr>
					<td class="url">
				  	<%= link_to post.description, post.url %>
				  </td>
				</tr>
				<tr>
					<td>
						  <h3>
								<%= link_to "Poster: " + post.user.name, user_path(post.user_id) %>
						    <%= link_to "Comments: #{post.comments.count}", post_path(post.id) %>
	  					</h3>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>

